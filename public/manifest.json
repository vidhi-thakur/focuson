{
  "manifest_version": 3,
  "name": "Focus On",
  "version": "2.0",
  "description": "Focus. Finish. Repeat.\nA clean to-do list with a Pomodoro-powered focus mode. Stay on track, one task at a time.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/FocusOn16px.png",
      "48": "assets/FocusOn48px.png",
      "128": "assets/FocusOn128px.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["blocker.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}